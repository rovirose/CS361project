<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>View Submitted Claims</title>
  </head>
  <body>
	  <div class="container-fluid p-4">
		  <div class="row justify-content-end">
			  <div class="col-2"><a class="btn btn-danger" href="/logout" role="button">Sign Out</a></div>
		  </div>
		  <div class="row justify-content-center">
			  <div class="col-4">
			  <h2>View Submitted Claims</h2>
			  </div>
		  </div>
		  <div class="row justify-content-center">

        <div class = "col-12 pt-4">
            <h2>Claims</h2>
            <form class="form-inline" id="viewBooks">
              <div class="form-group mb-2">
              </div>
            </form>
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">Claim ID</th>
                      <th scope="col">Patient</th>
                      <th scope="col">Procedure</th>
                      <th scope="col">Status</th>
                    </tr>
                  </thead>
                  <tbody>
					  <!--FOR EACH CLAIM, DISPLAY CLAIM DATA-->
                    
                        <% for(let i = 0; i < claims.length; i++){%>
                          <tr>
                            <td><%= claims[i].id %></td>
                            <td><%= claims[i].patient %></td>
                            <td><%= claims[i].procedure %></td>
                            <td><%= claims[i].status %></td>
                          </tr>
                        <% } %>
                  </tbody>
                </table>
           </div>
		  </div>
	  </div>
	  
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>