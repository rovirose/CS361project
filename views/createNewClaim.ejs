<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
		integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

	<title>Create New Claim</title>
</head>

<body>
	<div class="container">
		<div class="container">
			<div class="row p-4 justify-content-center">
				<div class="col-8">
					<h1>Medical Provider - Claim Details</h1>
					<form method="POST">
						<div class="form-group">
							<label for="claimId">Claim ID</label>
							<input type="number" class="form-control" id="claimId" name="claimId" placeholder="Claim ID"
								value="<%= claim.ID %>">
						</div>
						<div class="form-group">
							<label for="patientName">Patient Name</label>
							<input type="text" class="form-control" id="patientName" name="patientName"
								placeholder="Patient Name" value="<%= claim.PatientName %>">
						</div>
						<div class="form-group">
							<label for="procedureName">Procedure Name</label>
							<input type="text" class="form-control" id="procedureName" name="procedureName"
								placeholder="Procedure Name" value="<%= claim.ProcedureName %>">
						</div>
						<div class="form-group">
							<label for="procedureDate">Procedure Date</label>
							<input type="date" class="form-control" name="procedureDate" id="procedureDate"
								value="<%= claim.ProcedureDate %>">
						</div>
						<div class="form-group">
							<label for="diagnosis">Diagnosis</label>
							<input type="text" class="form-control" id="diagnosis" name="diagnosis"
								placeholder="Diagnosis" value="<%= claim.Diagnosis %>">
						</div>
						<div class="form-group">
							<label for="doctorName">Doctor Name</label>
							<input type="text" class="form-control" id="doctorName" name="doctorName"
								placeholder="Doctor Name" value="<%= claim.DoctorName %>">
						</div>
						<div class="form-group">
							<label for="operationDate">Operation Date</label>
							<input class="form-control" type="date" name="operationDate" id="operationDate"
								value="<%= claim.OperationDate %>">
						</div>
						<button class="btn btn-primary" type="submit">Save</button>
					</form>
				</div>
			</div>
		</div>
	</div>

	<!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
		integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
		crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
		integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
		crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
		integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
		crossorigin="anonymous"></script>
</body>

</html>